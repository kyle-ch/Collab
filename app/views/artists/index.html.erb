<div class="container-fluid">
  <div class="page-header">
    <h1>Select the correct artists</h1>
  </div>
  <%= form_tag artist_path, method: "get", html: {class: "form"} do %>
      <div class="form-group col-xs-6">
        <label class="control-label">Artists matching <b><%= params[:artist1_name].titlecase %></b></label>
        <%= select_tag("artist1_id",
                       options_from_collection_for_select(@artist1list, :id, :name), class: "form-control ") %>
      </div>
      <div class="form-group col-xs-6">
        <label class="control-label">Artists matching <b><%= params[:artist2_name].titlecase %></b></label>
        <%= select_tag("artist2_id",
                       options_from_collection_for_select(@artist2list, :id, :name), class: "form-control") %>
      </div>
      <%= submit_tag "Submit", class: "btn btn-primary center-block" %>
  <% end %>
</div>
