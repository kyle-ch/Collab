
<div class="container-fluid">
  <div class="page-header">
    <h1><%= "#{$artist1.name.titlecase} and #{$artist2.name.titlecase} tracks" %></h1>
    <p><%= "#{$artist1.name.titlecase} and #{$artist2.name.titlecase} have collaborated on #{$collabTrackList.size} tracks" %></p>
  </div>
  <% $collabTrackList.each do |track| %>
      <div class="row">
        <div class="col-xs-3"><%= track.name %> </div>
        <div class="col-xs-3"><%= track.album.name %> </div>
        <div class="col-xs-3">
          <% for i in 0..(track.artists.size-1) %>
              <%= track.artists[i].name %>
              <% if i < track.artists.size-1 %>
                  ,
              <% end %>
          <% end %>
        </div>
      </div>
  <% end %>


  <footer>
    <ul class="nav nav-pills">
      <li role="presentation" class="active"><a href="/">Start Over</a></li>
      <% if $collabTrackList.size > 0 %>
          <li role="presentation" class="active"><a href="/auth/spotify">Make it a playlist!</a></li>
      <% end %>
    </ul>

  </footer>
</div>
