<div class="container-fluid">
  <h1 class="page-header">Collab</h1>
  <%= form_tag artists_path, method: "get", html: {class: "form"} do %>
      <div class="form-group col-xs-4">
        <%= text_field_tag(:artist1_name, "", placeholder: "Enter first artist's name", class: "form-control",
                           autocomplete: "off") %>
      </div>
      <div class="form-group col-xs-4">
        <%= text_field_tag(:artist2_name, "", placeholder: "Enter second artist's name", class: "form-control",
                           autocomplete: "off") %>
      </div>
      <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

